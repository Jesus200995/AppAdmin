// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  COORD_TERRITORIAL
  TERRITORIAL
  FACILITADOR
  TECNICO_PROD
  TECNICO_SOC
  ADMIN
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  nombre       String
  curp         String?  @unique
  passwordHash String
  role         Role     @default(FACILITADOR)
  superiorId   String?
  superior     User?    @relation("UserSuperior", fields: [superiorId], references: [id])
  subalternos  User[]   @relation("UserSuperior")

  // trazabilidad
  actions      ActionLog[]

  // solicitudes donde es solicitante
  changeSuperiorRequests ChangeSuperiorRequest[] @relation("Requester")

  // solicitudes donde es nuevo superior
  asNewSuperior ChangeSuperiorRequest[] @relation("NewSuperior")

  // solicitudes donde es aprobador
  approvingRequests ChangeSuperiorRequest[] @relation("Approver")

  // solicitudes donde fue quien decidió
  decidedRequests ChangeSuperiorRequest[] @relation("DecidedBy")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ChangeSuperiorRequest {
  id            String        @id @default(cuid())
  requesterId   String
  requester     User          @relation("Requester", fields: [requesterId], references: [id])

  // a quién quieren reportar ahora
  newSuperiorId String
  newSuperior   User          @relation("NewSuperior", fields: [newSuperiorId], references: [id])

  // quién debe aprobar
  approverId    String?
  approver      User?         @relation("Approver", fields: [approverId], references: [id])

  status        RequestStatus @default(PENDING)
  reason        String?
  decidedById   String?
  decidedBy     User?         @relation("DecidedBy", fields: [decidedById], references: [id])

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model ActionLog {
  id         String   @id @default(cuid())
  actorId    String
  actor      User     @relation(fields: [actorId], references: [id])
  entity     String   // 'User' | 'ChangeSuperiorRequest' | etc.
  entityId   String
  action     String   // 'REQUEST_CHANGE_SUPERIOR' | 'APPROVE' | 'REJECT' | 'UPDATE_SUPERIOR' ...
  details    String?  // JSON string
  createdAt  DateTime @default(now())
}

