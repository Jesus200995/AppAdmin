generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COORD_TERRITORIAL
  TERRITORIAL
  FACILITADOR
  TECNICO_PROD
  TECNICO_SOC
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  nombre       String
  curp         String?  @unique
  passwordHash String
  role         Role     @default(FACILITADOR)
  superiorId   String?
  superior     User?    @relation("UserSuperior", fields: [superiorId], references: [id])
  subalternos  User[]   @relation("UserSuperior")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
